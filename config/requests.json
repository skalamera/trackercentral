    "schema": {
      "method": "POST",
      "host": "<%= iparam.freshdesk_subdomain %>.freshdesk.com",
      "path": "/api/v2/tickets/<%= context.ticketId %>/notes",
      "headers": {
        "Authorization": "Basic <%= encode(iparam.freshdesk_api_key + ':X') %>",
        "Content-Type": "application/json"
      }
    }
  },
